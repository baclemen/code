<Window x:Class="SavedVideoInterpreter.ProgressBarWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Please Wait" WindowStartupLocation="CenterOwner" Topmost="True" SizeToContent="WidthAndHeight" WindowStyle="ToolWindow" >
    <StackPanel Orientation="Vertical">
        <Label x:Name="Description" Margin="10">Finding more widgets ...</Label>
        <ProgressBar Margin="10" x:Name="ProgressBar" IsIndeterminate="True" Height="20" Width="300"></ProgressBar>
        <Button Margin="10" Content="Cancel" HorizontalAlignment="Right"></Button>
    </StackPanel>
</Window>
