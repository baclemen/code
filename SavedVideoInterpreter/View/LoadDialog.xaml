<UserControl x:Class="SavedVideoInterpreter.LoadDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        >
    <StackPanel Orientation="Horizontal">

        <Label Foreground="White" x:Name="LoadProgressLabel" VerticalAlignment="Center"  FontSize="10" >Loading Prototypes...</Label>

        <ProgressBar x:Name="LoadProgress" HorizontalAlignment="Stretch"  VerticalAlignment="Center" Height="10" Width="100" Margin="10" Value="0" IsEnabled="True" />
        <Button x:Name="CancelButton" VerticalAlignment="Center" HorizontalAlignment="Right" FontSize="10"  Click="CancelButton_Click">Cancel</Button>
    </StackPanel>
</UserControl>
